# {{ ansible_managed }}
/srv/**/log/*.log {
  su root root
  daily
  size 50M
  rotate 3
  missingok
  notifempty
  delaycompress
  copytruncate
  {% if common_restart_rsyslog %}
  postrotate
    service rsyslog stop
    rm /var/spool/rsyslog/imfile-state*
    service rsyslog start
  endscript
  {% endif %}
}
